{
	"compilerOptions": {
		"target": "esnext",
		"module": "es2015",
		"moduleResolution": "classic",
		"outDir": "output",
		"rootDir": "source",
		"noEmit": true,
		"sourceMap": true,
		"inlineSources": true,
		"declaration": true,
		"strict": true,
		"noEmitOnError": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"lib": [ "es2018", "dom", "esnext.bigint" ],
	},
	"include": [
		"source/**/*.ts",
	],
}
